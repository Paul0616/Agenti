<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/rectangle"
    >

    <TextView
        android:id="@+id/textviewNrfact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/clientTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:text="9999"
        android:textColor="?colorTextAccentSup"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/clientTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/textviewNrfact"
        android:layout_toLeftOf="@+id/textData"
        android:layout_toRightOf="@+id/textviewNrfact"
        android:layout_toStartOf="@+id/textData"
        android:layout_weight="0.90"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="?colorText" />

    <TextView
        android:id="@+id/textData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/clientTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:text="20-10-2017"
        android:textColor="?colorText"
        android:textSize="12sp" />

</RelativeLayout>